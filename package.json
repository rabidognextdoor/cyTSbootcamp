{
  "name": "cytsbootcamp",
  "version": "1.0.0",
  "description": "Testing using TypeScript Cypress and Mochawesome reporting",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:electron": "cypress run --browser electron",
    "cy:run-dashboard": "cypress run --record --key f0b0dd37-8104-48ad-9e58-68904a0bbd17",
    "percy:cy":  "percy exec -- cypress run"
  },
  "keywords": [
    "Testing",
    "Cypress",
    "Automation",
    "BDD",
    "Cucumber",
    "Typescript",
    "Percy"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@cucumber/cucumber": "^9.1.2",
    "@percy/cli": "^1.26.0",
    "@percy/cypress": "^3.1.2",
    "@types/cypress-cucumber-preprocessor": "^4.0.1",
    "@typescript-eslint/parser": "^5.59.11",
    "cypress": "^12.14.0",
    "cypress-mochawesome-reporter": "^3.5.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.1.3"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "stepDefinitions": [
    "cypress/common/*.ts",
    "cypress/support/step_defenitions/**/*.ts"
  ]
}
